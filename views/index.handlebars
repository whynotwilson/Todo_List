<!-- ./views/index.handlebars -->
<a href="/todos/new">Create</a>

<ul>
  {{#each todos}}
  <li>
    <input type="checkbox" name="done" {{#if this.done}} checked{{/if}} disabled>
    {{{this.name}}}
    <a href="/todos/{{{this._id}}}">detail</a>
    <a href="/todos/{{{this._id}}}/edit">edit</a>
    <form action="/todos/{{{this._id}}}/delete?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit">delete</button>
    </form>
  </li>
  {{/each}}
</ul>